<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.SettingsSecondActivity"
    >
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_settings_second_activity"
        android:alpha="0.8"
        android:layout_gravity="top"
        android:theme="@style/ToolbarTheme"
        app:titleTextColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/disabled_button"
        app:popupTheme="@style/AppTheme.PopupOverlay"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/settings_second_activity_recyclerview"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar_settings_second_activity"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="4dp"
        android:padding="4dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>