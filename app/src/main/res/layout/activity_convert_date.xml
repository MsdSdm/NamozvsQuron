<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ConvertDateActivity">
    <androidx.appcompat.widget.Toolbar
        app:title="@string/convert_date"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/toolbar_convert_date_activity"
        android:layout_gravity="top"
        android:theme="@style/ToolbarTheme"
        app:titleTextColor="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/disabled_button"
        app:popupTheme="@style/AppTheme.PopupOverlay" />
    <RadioGroup
        android:id="@+id/convert_date_activity_radio_group"
        app:layout_constraintTop_toBottomOf="@id/toolbar_convert_date_activity"
        android:orientation="vertical"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/convert_date_activity_from_hijri_radio_button"
            android:text="@string/convert_from_hijri"
            android:textColor="@android:color/black"
            android:buttonTint="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"/>
        <TextView
            android:id="@+id/convert_date_activity_from_hijri_button"
            android:layout_gravity="center"
            android:background="@drawable/box_border"
            android:alpha="0.9"
            android:padding="2dp"
            android:layout_width="200dp"
            android:textColor="@android:color/black"
            android:textSize="@dimen/widget_font_size_small"
            android:gravity="center"
            android:text="11 / 11 / 1441"
            android:layout_height="40dp"/>
        <RadioButton
            android:id="@+id/convert_date_activity_from_gregorian_radio_button"
            android:text="@string/convert_from_gregorian"
            android:textColor="@android:color/black"
            android:buttonTint="@android:color/black"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/convert_date_activity_from_gregorian_button"
            android:layout_gravity="center"
            android:background="@drawable/box_border"
            android:clickable="false"
            android:alpha="0.1"
            android:padding="2dp"
            android:layout_width="200dp"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:textSize="@dimen/widget_font_size_small"
            android:text="11 / 11 / 2019"
            android:layout_height="40dp"/>
    </RadioGroup>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@android:color/white"
        android:id="@+id/convert_date_activity_result_layout"
        app:layout_constraintTop_toBottomOf="@id/convert_date_activity_radio_group"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:padding="5dp"
            android:id="@+id/convert_date_activity_result_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:text="Damascus, Syria"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <ImageButton
            android:visibility="gone"
            android:id="@+id/convert_date_activity_result_drop_button"
            android:src="@drawable/ic_arrow_drop_down_black_24dp"
            app:layout_constraintTop_toBottomOf="@id/convert_date_activity_result_title"
            android:background="?attr/colorControlHighlight"
            android:scaleType="fitCenter"
            android:layout_width="match_parent"
            android:layout_height="20dp" />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:visibility="gone"
            android:id="@+id/convert_date_activity_result_prayers_layout"
            app:layout_constraintTop_toBottomOf="@id/convert_date_activity_result_title"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@android:color/darker_gray"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/convert_date_activity_result_divider"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
            <TextView
                android:layout_margin="5dp"
                android:id="@+id/convert_date_activity_result_time_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="hello\nworld"
                android:textColor="@color/disabled_button"
                android:textSize="@dimen/widget_font_size_small"
                app:layout_constraintBottom_toTopOf="@id/convert_date_activity_result_time_4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toStartOf="@id/convert_date_activity_result_time_2"
                app:layout_constraintTop_toBottomOf="@id/convert_date_activity_result_divider" />
            <TextView
                android:layout_margin="5dp"
                android:gravity="center"
                android:id="@+id/convert_date_activity_result_time_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="hello\nworld"
                android:textColor="@color/disabled_button"
                android:textSize="@dimen/widget_font_size_small"
                app:layout_constraintBottom_toTopOf="@id/convert_date_activity_result_time_5"
                app:layout_constraintStart_toEndOf="@id/convert_date_activity_result_time_1"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toStartOf="@id/convert_date_activity_result_time_3"
                app:layout_constraintTop_toBottomOf="@id/convert_date_activity_result_divider" />
            <TextView
                android:layout_margin="5dp"
                android:gravity="center"
                android:id="@+id/convert_date_activity_result_time_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="hello\nworld"
                android:textColor="@color/disabled_button"
                android:textSize="@dimen/widget_font_size_small"
                app:layout_constraintBottom_toTopOf="@id/convert_date_activity_result_time_6"
                app:layout_constraintStart_toEndOf="@id/convert_date_activity_result_time_2"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/convert_date_activity_result_divider" />
            <TextView
                android:layout_margin="5dp"
                android:id="@+id/convert_date_activity_result_time_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="hello\nworld"
                android:textColor="@color/disabled_button"
                android:textSize="@dimen/widget_font_size_small"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toStartOf="@id/convert_date_activity_result_time_5"
                app:layout_constraintTop_toBottomOf="@id/convert_date_activity_result_time_1" />
            <TextView
                android:layout_margin="5dp"
                android:gravity="center"
                android:id="@+id/convert_date_activity_result_time_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="hello\nworld"
                android:textColor="@color/disabled_button"
                android:textSize="@dimen/widget_font_size_small"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/convert_date_activity_result_time_4"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toStartOf="@id/convert_date_activity_result_time_6"
                app:layout_constraintTop_toBottomOf="@id/convert_date_activity_result_time_2" />
            <TextView
                android:layout_margin="5dp"
                android:gravity="center"
                android:id="@+id/convert_date_activity_result_time_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="hello\nworld"
                android:textColor="@color/disabled_button"
                android:textSize="@dimen/widget_font_size_small"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/convert_date_activity_result_time_5"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/convert_date_activity_result_time_3" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>