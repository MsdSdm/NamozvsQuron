<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/widgetColorSettings"
    tools:context=".Activities.UpdateCurrentLocationActivity">
    <androidx.appcompat.widget.Toolbar
        android:theme="@style/ToolbarTheme"
        app:titleTextColor="@android:color/white"
        android:alpha="0.7"
        android:id="@+id/toolbar_update_current_location_activity"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/disabled_button"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"/>
    <ScrollView
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar_update_current_location_activity"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="20sp"
                android:textColor="@android:color/white"
                android:id="@+id/update_current_location_activity_location_title"
                android:layout_marginTop="50dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/update_current_location_activity_location_details"
                android:textSize="10sp"
                android:textColor="@android:color/darker_gray"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/update_current_location_activity_location_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/update_current_location_activity_location_known"
                android:text="@string/last_known_device_location"
                android:textColor="@android:color/darker_gray"
                android:textSize="10sp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/update_current_location_activity_location_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <FrameLayout
                android:id="@+id/update_current_location_activity_location_edit_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="104dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/floating_button_circle"
                app:layout_constraintHorizontal_bias="0.128"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <ImageButton
                    android:id="@+id/update_current_location_activity_location_edit_button_image"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_edit_black_24dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </FrameLayout>
            <LinearLayout
                android:id="@+id/update_current_location_activity_buttons_layout"
                android:orientation="vertical"
                android:background="@android:color/darker_gray"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/update_current_location_activity_location_edit_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/update_current_location_activity_gps_button"
                    android:textColor="@android:color/white"
                    android:text="@string/gps"
                    android:gravity="center"
                    android:background="@color/widgetColorSettingsBox"
                    android:layout_marginTop="0.5dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp" />
                <TextView
                    android:id="@+id/update_current_location_activity_network_button"
                    android:textColor="@android:color/white"
                    android:text="@string/the_network"
                    android:gravity="center"
                    android:background="@color/widgetColorSettingsBox"
                    android:layout_marginTop="0.5dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp" />
                <TextView
                    android:id="@+id/update_current_location_activity_last_location_button"
                    android:textColor="@android:color/white"
                    android:text="@string/last_known_device_location"
                    android:gravity="center"
                    android:background="@color/widgetColorSettingsBox"
                    android:layout_marginTop="0.5dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp" />
                <TextView
                    android:id="@+id/update_current_location_activity_manually_button"
                    android:textColor="@android:color/white"
                    android:text="@string/choose_location_manually"
                    android:gravity="center"
                    android:background="@color/widgetColorSettingsBox"
                    android:layout_marginTop="0.5dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp" />
                <TextView
                    android:id="@+id/update_current_location_activity_internet_button"
                    android:textColor="@android:color/white"
                    android:text="@string/internet_search"
                    android:gravity="center"
                    android:background="@color/widgetColorSettingsBox"
                    android:layout_marginTop="0.5dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp" />
            </LinearLayout>
            <LinearLayout
                android:background="@android:color/darker_gray"
                android:layout_marginTop="2dp"
                app:layout_constraintTop_toBottomOf="@id/update_current_location_activity_buttons_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageButton
                    android:id="@+id/update_current_location_activity_save_button"
                    android:tint="@color/buttons"
                    android:padding="10dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_save_24dp"
                    android:layout_marginTop="0.5dp"
                    android:background="@color/widgetColorSettingsBox"
                    android:layout_width="match_parent"
                    android:layout_height="100dp" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>