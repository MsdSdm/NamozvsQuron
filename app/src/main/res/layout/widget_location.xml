<?xml version="1.0" encoding="utf-8"?><androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    android:layout_margin="10dp"    android:layout_width="match_parent"    android:layout_height="wrap_content"    app:layout_constraintStart_toStartOf="parent"    app:layout_constraintEnd_toEndOf="parent"    android:background="@drawable/box_shape">    <TextView        android:id="@+id/widget_location_title"        android:layout_width="0dp"        android:layout_height="wrap_content"        android:layout_marginStart="10dp"        android:layout_marginTop="3dp"        android:text="Damascus, Syria"        android:textDirection="ltr"        android:gravity="left"        android:textColor="@android:color/white"        android:textSize="20sp"        app:layout_constraintStart_toEndOf="@id/widget_location_button"        app:layout_constraintEnd_toEndOf="parent"        app:layout_constraintTop_toTopOf="parent" />    <ImageButton        android:id="@+id/widget_location_button"        android:layout_width="30dp"        android:layout_height="30dp"        android:layout_marginStart="2dp"        android:layout_marginTop="10dp"        android:layout_marginEnd="3dp"        android:background="@android:color/transparent"        android:scaleType="fitXY"        android:src="@drawable/ic_more_vert_black_24dp"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintEnd_toStartOf="@id/widget_location_title"        app:layout_constraintTop_toTopOf="parent" />    <TextView        android:id="@+id/widget_location_details"        android:layout_width="0dp"        android:layout_height="wrap_content"        android:layout_marginTop="3dp"        android:layout_marginStart="5dp"        android:textDirection="ltr"        android:gravity="left"        android:text="@string/location_widget_details"        android:textColor="@android:color/darker_gray"        android:textSize="15sp"        app:layout_constraintEnd_toEndOf="parent"        app:layout_constraintStart_toEndOf="@id/widget_location_button"        app:layout_constraintTop_toBottomOf="@id/widget_location_title" />    <TextView        android:id="@+id/widget_location_time_1"        android:layout_width="0dp"        android:layout_height="wrap_content"        android:gravity="center"        android:text="hello\nworld"        android:textColor="@android:color/white"        android:textSize="@dimen/widget_font_size_small"        app:layout_constraintBottom_toTopOf="@id/widget_location_time_4"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintHorizontal_bias="0.5"        app:layout_constraintEnd_toStartOf="@id/widget_location_time_2"        app:layout_constraintTop_toBottomOf="@id/widget_location_details" />    <TextView        android:gravity="center"        android:id="@+id/widget_location_time_2"        android:layout_width="0dp"        android:layout_height="wrap_content"        android:text="hello\nworld"        android:textColor="@android:color/white"        android:textSize="@dimen/widget_font_size_small"        app:layout_constraintBottom_toTopOf="@id/widget_location_time_5"        app:layout_constraintStart_toEndOf="@id/widget_location_time_1"        app:layout_constraintHorizontal_bias="0.5"        app:layout_constraintEnd_toStartOf="@id/widget_location_time_3"        app:layout_constraintTop_toBottomOf="@id/widget_location_details" />    <TextView        android:gravity="center"        android:id="@+id/widget_location_time_3"        android:layout_width="0dp"        android:layout_height="wrap_content"        android:text="hello\nworld"        android:textColor="@android:color/white"        android:textSize="@dimen/widget_font_size_small"        app:layout_constraintBottom_toTopOf="@id/widget_location_time_6"        app:layout_constraintStart_toEndOf="@id/widget_location_time_2"        app:layout_constraintHorizontal_bias="0.5"        app:layout_constraintEnd_toEndOf="parent"        app:layout_constraintTop_toBottomOf="@id/widget_location_details" />    <TextView        android:id="@+id/widget_location_time_4"        android:layout_width="0dp"        android:layout_height="wrap_content"        android:gravity="center"        android:text="hello\nworld"        android:textColor="@android:color/white"        android:textSize="@dimen/widget_font_size_small"        app:layout_constraintBottom_toBottomOf="parent"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintHorizontal_bias="0.5"        app:layout_constraintEnd_toStartOf="@id/widget_location_time_5"        app:layout_constraintTop_toBottomOf="@id/widget_location_time_1" />    <TextView        android:gravity="center"        android:id="@+id/widget_location_time_5"        android:layout_width="0dp"        android:layout_height="wrap_content"        android:text="hello\nworld"        android:textColor="@android:color/white"        android:textSize="@dimen/widget_font_size_small"        app:layout_constraintBottom_toBottomOf="parent"        app:layout_constraintStart_toEndOf="@+id/widget_location_time_4"        app:layout_constraintHorizontal_bias="0.5"        app:layout_constraintEnd_toStartOf="@id/widget_location_time_6"        app:layout_constraintTop_toBottomOf="@id/widget_location_time_2" />    <TextView        android:gravity="center"        android:id="@+id/widget_location_time_6"        android:layout_width="0dp"        android:layout_height="wrap_content"        android:text="hello\nworld"        android:textColor="@android:color/white"        android:textSize="@dimen/widget_font_size_small"        app:layout_constraintBottom_toBottomOf="parent"        app:layout_constraintStart_toEndOf="@id/widget_location_time_5"        app:layout_constraintHorizontal_bias="0.5"        app:layout_constraintEnd_toEndOf="parent"        app:layout_constraintTop_toBottomOf="@id/widget_location_time_3" /></androidx.constraintlayout.widget.ConstraintLayout>