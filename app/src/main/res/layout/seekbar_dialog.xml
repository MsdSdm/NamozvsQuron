<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:layout_marginTop="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:text="50"
        android:textSize="@dimen/widget_font_size_small"
        android:textColor="@android:color/black"
        android:id="@+id/seekbar_dialog_value"
        app:layout_constraintEnd_toStartOf="@id/seekbar_dialog_max"
        app:layout_constraintStart_toEndOf="@id/seekbar_dialog_min"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:text="100"
        android:textSize="@dimen/widget_font_size_small"
        android:id="@+id/seekbar_dialog_min"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:text="0"
        android:textSize="@dimen/widget_font_size_small"
        android:id="@+id/seekbar_dialog_max"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <androidx.appcompat.widget.AppCompatSeekBar
        android:progress="50"
        app:layout_constraintTop_toBottomOf="@id/seekbar_dialog_value"
        android:id="@+id/seekbar_dialog_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
</androidx.constraintlayout.widget.ConstraintLayout>