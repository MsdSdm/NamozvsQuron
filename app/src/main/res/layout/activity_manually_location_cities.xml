<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/buttons"
    tools:context=".Activities.ManuallyLocationCitiesActivity">

    <TextView
        android:gravity="start"
        android:id="@+id/manually_location_cities_activity_header"
        android:textSize="20sp"
        android:text="@string/choose_the_city"
        android:textColor="@android:color/white"
        android:padding="15dp"
        android:background="#1B1B1B"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:alpha="0.8"/>

    <EditText
        android:inputType="text"
        android:textColor="@android:color/white"
        android:id="@+id/manually_location_cities_activity_search"
        android:hint="@string/search"
        android:gravity="start"
        app:layout_constraintTop_toBottomOf="@id/manually_location_cities_activity_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/manually_location_cities_activity_countries_layout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/manually_location_cities_activity_search"
        android:layout_width="match_parent"
        android:layout_height="0dp"
       android:layout_margin="5dp"
        android:padding="5dp"
        android:alpha="80"/>

</androidx.constraintlayout.widget.ConstraintLayout>