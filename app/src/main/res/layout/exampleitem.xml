<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="4dp"
    app:cardCornerRadius="16dp"
    android:backgroundTint="@color/mdtp_light_gray"
    android:alpha="0.9"
    android:padding="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp"
        >
        <TextView
            android:id="@+id/textview_line1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Zikr nomi"
            android:textColor="@color/dblack150"
            android:textSize="15sp"
            android:textStyle="bold"
            android:padding="2dp"
           />
        <TextView
            android:id="@+id/textview_line_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview_line1"
            android:layout_marginStart="8dp"
            android:text="soni"
            android:textSize="14sp"
            android:textColor="@color/dblack80"
            android:layout_marginTop="5dp"/>
    </RelativeLayout>


</androidx.cardview.widget.CardView>