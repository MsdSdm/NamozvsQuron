<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
 <ImageButton
     android:id="@+id/settings_restore_box_restore_image"
     android:tint="@android:color/darker_gray"
     android:src="@drawable/ic_check_black_24dp"
     android:background="@android:color/transparent"
     android:scaleType="fitXY"
     app:layout_constraintTop_toTopOf="parent"
     app:layout_constraintBottom_toBottomOf="parent"
     app:layout_constraintEnd_toEndOf="parent"
     android:layout_width="30dp"
     android:layout_height="30dp" />

 <TextView
     android:id="@+id/settings_restore_box_restore_text"
     android:text="@string/alert_restore_button"
     android:textSize="22sp"
     app:layout_constraintTop_toTopOf="parent"
     app:layout_constraintEnd_toStartOf="@id/settings_restore_box_restore_image"
     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintBottom_toBottomOf="parent"
     android:layout_width="0dp"
     android:layout_height="wrap_content" />
</androidx.constraintlayout.widget.ConstraintLayout>